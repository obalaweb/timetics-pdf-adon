{
    "name": "arraytics/timetics-pdf-addon",
    "description": "Generate and attach booking confirmation PDFs to Timetics customer emails",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Arraytics",
            "email": "support@arraytics.com",
            "homepage": "https://arraytics.com"
        }
    ],
    "keywords": [
        "wordpress",
        "plugin",
        "timetics",
        "pdf",
        "booking",
        "appointment"
    ],
    "homepage": "https://arraytics.com/timetics/",
    "support": {
        "issues": "https://github.com/arraytics/timetics-pdf-addon/issues",
        "source": "https://github.com/arraytics/timetics-pdf-addon"
    },
    "require": {
        "php": ">=7.4",
        "tecnickcom/tcpdf": "^6.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.6",
        "wp-coding-standards/wpcs": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Timetics_Pdf_Addon\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Timetics_Pdf_Addon\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs --standard=WordPress includes/",
        "phpcbf": "phpcbf --standard=WordPress includes/"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true
        }
    },
    "extra": {
        "installer-name": "timetics-pdf-addon"
    }
}
